@model IEnumerable<AmsLight.Models.Student>

@{
    ViewBag.Title = "Manage Students";
    ViewBag.HeaderText = "Manage Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<AmsLight.Models.Batch> batches = ViewBag.Batches;
    int selectedBatchId = ViewBag.BatchId;

}


<div class="card">
    <div class="card-header">  Select Batch To List Down the Students </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label" for="BatchId"> Batch Code</label>
                        <select class="form-control valid" id="BatchDDL" name="BatchDDL" onchange="window.location.href='/students/index/'+   $('#BatchDDL option:selected').val()">
                            <option id="-1" value="-1"> Select Batchs</option>
                            @foreach (var batch in batches)
                            {
                                string selected = "";
                                if (selectedBatchId == batch.BatchId)
                                {
                                    selected = "selected";
                                }
                                <option @selected value="@batch.BatchId"> @batch.BatchCode ( @batch.StartTime - @batch.EndTime) </option>
                            }
                        </select>
                    </div>
                </div>
                @if (selectedBatchId != 0)
                {
                    <center>
                        <div id="UploadStudentsExcell" class="col-md-2 col-sm-2 col-xs-12 ">
                            <div class="form-group">
                                <input type="button" value="Upload Students Excell" class="btn btn-outline-info" onclick="window.location.href = '/students/Create/'+  $('#BatchDDL option:selected').val()" />
                            </div>
                        </div>
                    </center>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Student Name </th>
                                    <th>Candidate Code</th>
                                    <th> </th>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="3">
                                            <center> No Students</center>
                                        </td>
                                    </tr>
                                }

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StudentName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CandidateCode)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tbody>
                                <tr>
                                    <th>Student Name </th>
                                    <th>Candidate Code</th>
                                    <th> </th>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>

}
